platform :osx, '10.11'
use_frameworks!
inhibit_all_warnings!

def essential_pods
  pod 'GTMAppAuth'
  pod 'AppAuth'
  pod 'MASShortcut'
  pod 'Bugsnag'
end

# TogglTrack
target 'TogglTrack' do
  project 'TogglTrack/TogglTrack.xcodeproj'
  essential_pods
  pod 'Sparkle'
end

# TogglTrack-AppStore
target 'TogglTrack-AppStore' do
  project 'TogglTrack/TogglTrack.xcodeproj'
  essential_pods
end

target 'TogglTrackTests' do
  project 'TogglTrack/TogglTrack.xcodeproj'
  essential_pods
  pod 'Sparkle'
end

target 'TogglTrackTests-AppStore' do
  project 'TogglTrack/TogglTrack.xcodeproj'
  essential_pods
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.11'
    end
  end
end
