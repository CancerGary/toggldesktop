<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:togglTrack="clr-namespace:TogglTrack">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Buttons.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type togglTrack:TogglNotification}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type togglTrack:TogglNotification}">
                    <Border Background="{DynamicResource Toggl.Background}" Margin="16 16 8 8">
                        <Border.Effect>
                            <DropShadowEffect
                                Direction="270"
                                ShadowDepth="5"
                                BlurRadius="14"
                                Opacity="0.28" />
                        </Border.Effect>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/TogglTrack;component/Resources/toggl.ico"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Height="40"
                                       Width="40"
                                       Margin="16"/>
                                <StackPanel Orientation="Vertical" Margin="0 16" Width="220">
                                    <TextBlock Style="{StaticResource Toggl.BaseText}"
                                               Text="{TemplateBinding Message}"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Style="{StaticResource Toggl.CaptionText}"
                                               Text="{TemplateBinding Title}"/>
                                </StackPanel>
                                <Button Name="PART_CloseButton"
                                        Style="{StaticResource Toggl.CrossButton}"
                                        Height="32"
                                        Width="32"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                                        Margin="4"/>
                            </StackPanel>
                            <ContentPresenter Margin="20 0 20 16" Content="{TemplateBinding Content}" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type togglTrack:AutotrackerNotification}" BasedOn="{StaticResource {x:Type togglTrack:TogglNotification}}" />
    <Style TargetType="{x:Type togglTrack:PomodoroNotification}" BasedOn="{StaticResource {x:Type togglTrack:TogglNotification}}" />
    <Style TargetType="{x:Type togglTrack:ReminderNotification}" BasedOn="{StaticResource {x:Type togglTrack:TogglNotification}}" />
</ResourceDictionary>